/* pages/detail/detail.wxss */
page{
  background-color: #f0f0f0;
}
button{
	height: 80rpx;
	margin: 10rpx 13rpx;
	display: inline;
}

.scroll{
	height: 950rpx;
  background-color: rgb(255, 255, 255);
  margin: 10rpx;
  padding: 10rpx;
  width: 95%;
  border-radius: 20rpx;
}


.food{
	width: 100%;
	background-color: yellow;
	display: flex;
}
#name{
	width:33%
}
#quantity{
	width:33%
}
#price{
	width:33%
}
.restaurant{
  height: 60rpx;
  margin: 10rpx;
  display: flex;
  flex-direction: row;

}
.line{
  height: 1rpx;
  background-color: gray;
  margin: 5rpx 10rpx;
}

.ordermsg{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
  margin: 20rpx;
}


.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
}


.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 70%;
  margin-left: 15%;
  margin-top: 40%;
}

.toast-title {
  position: relative;
  padding-left: 5%;
  background-color: #e7192a;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}

.toast-main {

  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}


.toast-button {
  display: flex;
  background-color: rgb(255, 255, 255);
}

.button1 {
  width: 50%;
  display: flex;
  justify-content:center;
}

.button2 {
  width: 50%;
  display: flex;
  justify-content:center;
}

.button1 button {
  width: 100%;
  background-color: white;
  color: red;
  border-radius: 0px;
  border-bottom-left-radius: 16rpx;
}

.button2 button{
  width: 100%;
  background-color: white;
  color: black;
  border-radius: 0px;
  border-bottom-right-radius: 16rpx;
}

.selectcondition{
  height: 100%;
  margin: 10rpx;
}

.condition{
  width: 100%;
  height: 100%;
  font-size: 20rpx;
  background-color: rgb(201, 201, 201);
 
}

.close{
  position: absolute;
  top: 0;                  
  right: 0; 
}

.information{
  display: flex;
  align-items: center;
  width:90%;
  margin-left: 20rpx;
}

.popup{
  background-color: rgb(255, 255, 255);
  width: 500rpx;
  height: 300rpx;
  position: fixed;
  top: 100px;
  left: 60px;
  z-index: 9999;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  border:solid 1rpx lightsalmon;
}