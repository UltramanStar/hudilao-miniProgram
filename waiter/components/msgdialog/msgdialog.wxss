/* components/custom-popup/custom-popup.wxss */
.container1{
   animation: blink 4s infinite alternate;
    position: fixed;
    bottom: 900rpx; /* 控制视图距离底部的距离 */
    right: 0rpx;/* 控制视图距离右边的距离 */
    width: 200rpx; /* 视图的宽度 */
    height: 200rpx; /* 视图的高度 */
    background-color: rgba(255, 51, 51, 0.5);/* 视图的背景色，这里是半透明黑色 */
    color: #fff; /* 文本颜色 */
    border-radius: 200rpx; /* 圆角 */
    text-align: center;/* 文本居中 */
    line-height: 100rpx; /* 文本垂直居中 */
    overflow: hidden;
}

@keyframes blink {
  0% {
    opacity: 1; /* 初始状态，完全可见 */
  }
  50% {
    opacity: 0; /* 中间状态，完全不可见 */
  }
  100% {
    opacity: 1; /* 最终状态，完全可见 */
  }
}

.content{
  width: 100%;
  height:150rpx; 
  display: flex;
  flex-direction: column;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}

.close{
  height: 50rpx;
  font-size: 15px;
  border-top:solid 1rpx rgb(214, 214, 213);
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}
