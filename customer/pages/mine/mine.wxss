/* pages/mine/mine.wxss */
/* 用户列表选项样式 */
page {
  width: 100%;
  height: 100%;
  background:#f0f0f0;
}
.parent_catainer{
}
 
/* 头部背景图片 */
.container_head{
  height: 340rpx;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;

}
 
.head_img {
  position: absolute;
  width: 100%;
  height: 340rpx;
  border-radius: 0px 0px 30px 30px;
}
 
.head_pers_info{
   height: 200rpx;
   width: 100%;
   margin-bottom: 50rpx;
   justify-content: left;
   display: flex;
   align-items: center;
   flex-direction: row;
   position: absolute;
}
 
.head_pic{
  margin-top: 100rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #08cbb0;
  color: #ffffff;
  align-items: center;
  display: flex;
  justify-content: center;
}
.head_pic_content{
  position: absolute;
  width: 110rpx;
  height: 110rpx;
  border-radius: 55rpx;
  background-color: white;
}
 
.head_pic{
  margin-left: 5%;
}
 
.inf_content{
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
  margin-top: 100rpx;
  align-items: flex-start;
  justify-content: center;
   color: #ffffff;
   padding-bottom: 0rpx;
}
 
.user_info{
  text-align: left;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
 
.family_info_ct_phone{
  text-align: center;
  justify-content: center;
  font-size: 30rpx;
	font-weight: 600;
}
 
.family_info_ct{
  text-align: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 2rpx;
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-align: left;
  text-overflow: ellipsis;
}
 
.userItemListView{
  background: #fff;
  padding: 0;
  margin: 2rpx 0;
  border-radius: 20rpx;
}
 
.userItemListView > view{
  height: 94rpx;
  line-height: 94rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #F1F1F1;
  position: relative;
}
 
/* 移除最后一个元素的下边框 */
.userItemListView > view:last-child{
  border: none;
}
 
.my_priview_md{
  display: flex;
  align-items: center;
}
 
.my_priview{
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}
 
.arrow{
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  /* 旋转45度 */
  transform: rotate(45deg);
  /* 调整位置 */
  position: absolute;
  right: 30rpx;
  top: 38rpx;
}
 
.userItemListView text{
  font-size: 30rpx;
}
 
.VIP-container{
  background: radial-gradient(circle, gold, lightgoldenrodyellow);
	height: 150rpx;
	border-radius: 50px;
	margin: 10px;
	border: 2px solid rgb(54, 39, 4);
	display: flex;
  justify-content: center; /* 水平居中对齐 */
  align-items: center; /* 垂直居中对齐 */
}
.info-container {
  display: flex; /* 使用 Flex 布局使图标和文本水平排列 */
  align-items: center; /* 垂直居中对齐 */
}

.icon {
  width: 60rpx; /* 图标的宽度 */
  height: 60rpx; /* 图标的高度 */
  margin-right: 110rpx; /* 图标与文本之间的右侧间距 */
}

.description {
  font-size: 40rpx; /* 描述文本的字体大小 */
	color: #666; /* 描述文本的颜色 */
	font-weight: bold;
}
.text-container {
  margin-right: 100rpx; /* 右侧间距 */
  flex-grow: 1; /* 填充剩余空间，使文本向右靠近 */
  text-align: right; /* 文本右对齐 */
}
